{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./dist",
    "lib": ["ES6", "ES2017", "ES2018", "ES2019", "ES2020"],
    "esModuleInterop": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    }
}